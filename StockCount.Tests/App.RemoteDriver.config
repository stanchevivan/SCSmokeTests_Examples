     see the web.config examples at http://go.microsoft.com/fwlink/?LinkId=214134. -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <fourth driverType="RemoteDriver" serverUrl="http://localhost:4444/wd/hub" xdt:Transform="Replace">
    <capabilities>
      <add key="setBrowserName" value="firefox"/>
      <add key="setPlatform" value="WINDOWS"/>
    </capabilities>
  </fourth>
</configuration>